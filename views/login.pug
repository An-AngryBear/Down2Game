extends index.pug

block content
    body(id="body" class="bg bg-login")
        include partials/nav.pug
        div(class="loginForm welcome")
            h1(class="pix-header") Log In
            form(action="/login", method="post")
                input(class="form-control login-email" type="email" placeholder="email" name="email")
                input(class="form-control login-pass" type="password" placeholder="password" name="password")
                button(class="btn btn-primary login-btn" type="submit") login
                //- button(class="btn btn-primary login-btn" type="submit") sign up
        include partials/scripts.pug
    